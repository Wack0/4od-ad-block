{
    "manifest_version": 2,
    "name": "4oD Ad Block",
    "version": "3.0",
    "description": "Remove advertisements from 4oD streaming",
    "icons": {
        "16": "images/16.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "background": { "scripts": ["background.js"] },
    "permissions": ["webRequest", "webRequestBlocking", "*://*.channel4.com/*"],
    "page_action": {}
}